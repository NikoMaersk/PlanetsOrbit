<Window x:Class="PlanetsOrbit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanetsOrbit"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Canvas x:Name="StarsCanvas" Background="Black" SizeChanged="StarsCanvas_SizeChanged"/>
        <Canvas Name="SolarSystemCanvas" Background="Transparent" SizeChanged="SolarSystemCanvas_SizeChanged">
            <Ellipse x:Name="Sun" Width="100" Height="100" Fill="Yellow"/>
        </Canvas>
    </Grid>
    
</Window>
